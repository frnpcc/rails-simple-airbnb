<img src="https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200" class="img-fluid" alt="Responsive image">
<div class="container">
  <div class="d-flex">
      <div class="p-3">
        <div class="flat-show-card">
          <h2><%= @flat.name %></h2>
          <p><%= @flat.address %></p>
        </div>
        <div class="flat-show-card">
          <h2>More information about this flat</h2>
          <p><%= @flat.description %></p>
        </div>
      </div>
      <div class="p-3">
        <div class="flat-card">
          <h2>Details</h2>
          <p>Number of guests allowed: <%= @flat.number_of_guests %> <i class="fa-solid fa-people-group"></i></p>
          <p>Price per night: <%= @flat.price_per_night %><i class="fa-solid fa-euro-sign"></i></p>
        </div>
      </div>
  </div>
</div>
