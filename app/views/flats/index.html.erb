
<div class="container">
  <h1>All our Flats</h1>

  <div class="d-flex">
    <% @flats.each do |flat| %>
      <div class="card-deck p-2">
        <div class="card">
          <div class="card-body">
            <h3><%= flat.name %></h3>
            <p><%= flat.address %></p>
          </div>
          <div class="card-body d-flex justify-content-end">
            <p class="p-2"><i class="fa-solid fa-people-group"></i> <%= flat.number_of_guests %></p>
            <p class="p-2"><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
          </div>
          <div class="card-footer">
            <small class="text-muted p-2"><%= link_to "More info", flat_path(flat) %></small>
            <small class="text-muted p-2"><%= link_to "Edit", edit_flat_path(flat) %></small>
            <small class="text-muted p-2"><%= link_to "Remove", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></small>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
